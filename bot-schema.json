{
  "id": "Bot",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 52,
      "pattern": "[a-z\\d~+-]+"
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "timezone_offset": {
      "type": "integer"
    },
    "timezone_name": {
      "type": "string"
    },
    "default_block":{
      "type":"string",
      "chance": "guid"
    }
  }
}
